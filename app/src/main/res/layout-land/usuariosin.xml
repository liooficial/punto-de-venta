<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true">


    <!-- Contenido principal de la actividad -->

    <!-- Menú lateral -->
    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/u"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  menu"
                android:textStyle="bold"
                android:padding="17px"
                android:textSize="28sp"
                android:fontFamily="@font/logo1"
                android:textColor="@color/black"
                android:background="@drawable/redondeado"
                android:drawableStart="@drawable/lista"
                android:onClick="openMenu" />
            <EditText
                android:id="@+id/IDu"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/usuario"
                android:layout_marginTop="30dp"
                android:textSize="26sp"
                android:hint="Usuario       "/>
            <Spinner
                android:id="@+id/usuario"
                android:layout_marginLeft="20px"
                android:layout_marginTop="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/contraseña"
                android:layout_below="@+id/IDu"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_marginTop="28dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:hint="Contraseña"/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/botones1"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/u"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt1"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="17px"
                android:layout_marginBottom="17px"
                android:layout_marginRight="17px"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/editar"/>

            <Button
                android:id="@+id/bt2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="17px"
                android:background="@drawable/agregar"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/botones2"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/botones1"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="17px"
                android:layout_marginBottom="17px"
                android:layout_marginRight="17px"
                android:layout_marginLeft="290dp"
                android:background="@drawable/borrar" />
            <Button
                android:id="@+id/buscar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/buscar"
                android:layout_margin="17px" />

        </LinearLayout>
    </RelativeLayout></ScrollView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/navigation_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/blaco"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boss"
            >

        </ImageView>
        <Button
            android:id="@+id/usuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="19dp"
            android:textSize="19dp"
            android:layout_marginTop="12dp"
            android:text="Agregar usuarios"/>
        <Button
            android:id="@+id/producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="19dp"
            android:textSize="19dp"
            android:layout_marginTop="12dp"
            android:text="Registrar producto"/>
        <Button
            android:id="@+id/venta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="19dp"
            android:textSize="19dp"
            android:layout_marginTop="12dp"
            android:text="Venta"/>
        <Button
            android:id="@+id/inventario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="19dp"
            android:textSize="19dp"
            android:layout_marginTop="12dp"
            android:text="inventario"/>
        <Button
            android:id="@+id/salir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="19dp"
            android:textSize="19dp"
            android:layout_marginTop="210dp"
            android:text="cerrar sesion"/>

        <!-- Aquí irían los elementos del menú lateral -->

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>