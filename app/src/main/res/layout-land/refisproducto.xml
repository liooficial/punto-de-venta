<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:background="@color/black"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true">


    <!-- Contenido principal de la actividad -->

    <!-- Menú lateral -->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  menu"
                        android:textStyle="bold"
                        android:padding="17px"
                        android:textSize="28sp"
                        android:fontFamily="@font/logo1"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:drawableStart="@drawable/lista"
                        android:onClick="openMenu" />
                    <TextView
                        android:id="@+id/id1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="100dp"
                        android:layout_marginLeft="20px"
                        android:text="id.producto"/>
                    <TextView
                        android:id="@+id/id2"
                        android:layout_below="@+id/id1"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="20px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:hint=""
                        android:textSize="26sp" />
                    <Button
                        android:id="@+id/btscaner"
                        android:layout_alignBottom="@+id/id2"
                        android:layout_toRightOf="@+id/id1"
                        android:layout_width="120dp"
                        android:layout_marginLeft="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/qr"/>
                    <TextView
                        android:id="@+id/n1"
                        android:layout_below="@+id/id2"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80px"
                        android:layout_marginLeft="20px"
                        android:textSize="26sp"
                        android:text="Nombre del producto"/>
                    <EditText
                        android:id="@+id/n2"
                        android:layout_below="@+id/n1"
                        android:layout_marginTop="80px"
                        android:layout_marginLeft="20px"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:hint="Nombre del producto"/>
                    <TextView
                        android:id="@+id/Forma1"
                        android:layout_below="@+id/n2"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="20px"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:text="Forma del artículo"/>
                    <EditText
                        android:id="@+id/Forma2"
                        android:layout_toRightOf="@+id/Forma1"
                        android:layout_alignBaseline="@+id/Forma1"
                        android:layout_marginLeft="20px"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:hint="Forma del artículo"/>
                    <TextView
                        android:id="@+id/v1"
                        android:layout_marginTop="180px"
                        android:layout_below="@+id/Forma1"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:textSize="26sp"
                        android:text="Volumen del artículo"/>
                    <EditText
                        android:id="@+id/v2"
                        android:layout_toRightOf="@+id/v1"
                        android:layout_alignBaseline="@+id/v1"
                        android:layout_marginLeft="20px"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:hint="Volumen del artículo"/>

                    <TextView
                        android:id="@+id/precio_v1"
                        android:layout_marginTop="80px"
                        android:layout_below="@+id/v1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        android:text="Precio"/>
                    <EditText
                        android:id="@+id/precio_v2"
                        android:layout_toRightOf="@+id/precio_v1"
                        android:layout_alignBaseline="@+id/precio_v1"
                        android:layout_marginLeft="20px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        android:hint="Precio"/>
                    <TextView
                        android:id="@+id/catidadp"
                        android:layout_marginTop="80px"
                        android:layout_below="@+id/precio_v1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        android:text="Catidad"/>
                    <EditText
                        android:id="@+id/catidadp2"
                        android:layout_toRightOf="@+id/catidadp"
                        android:layout_alignBaseline="@+id/catidadp"
                        android:layout_marginLeft="20px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        android:hint="Catidad del producto"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="80px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bt1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="19px"
                        android:background="@drawable/buscar" />

                    <Button
                        android:id="@+id/bt2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="19px"
                        android:background="@drawable/caja" />

                    <Button
                        android:id="@+id/bt3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="19px"
                        android:background="@drawable/borrar"/>
                    <Button
                        android:id="@+id/bt4"
                        android:background="@drawable/editar"
                        android:layout_width="90dp"
                        android:layout_height="90dp"/>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/navigation_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/blaco"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boss"
            >

        </ImageView>
        <Button
            android:id="@+id/usuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="19dp"
            android:textSize="19dp"
            android:layout_marginTop="12dp"
            android:text="Agregar usuarios"/>
        <Button
            android:id="@+id/producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="19dp"
            android:textSize="19dp"
            android:layout_marginTop="12dp"
            android:text="Registrar producto"/>
        <Button
            android:id="@+id/venta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="19dp"
            android:textSize="19dp"
            android:layout_marginTop="12dp"
            android:text="Venta"/>
        <Button
            android:id="@+id/inventario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="19dp"
            android:textSize="19dp"
            android:layout_marginTop="12dp"
            android:text="inventario"/>
        <Button
            android:id="@+id/salir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="19dp"
            android:textSize="19dp"
            android:layout_marginTop="210dp"
            android:text="cerrar sesion"/>
             </LinearLayout>
        </ScrollView>
        <!-- Aquí irían los elementos del menú lateral -->

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>