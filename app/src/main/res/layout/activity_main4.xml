<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:background="@color/black"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true">


    <!-- Contenido principal de la actividad -->

    <!-- Menú lateral -->
    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/redondeado"
            android:drawableStart="@drawable/lista"
            android:fontFamily="@font/logo1"
            android:onClick="openMenu"
            android:padding="17px"
            android:text="  menu"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/ss"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/btn_menu"
            android:layout_marginTop="30dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listaproductos"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

        </ScrollView>
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/ss"
            android:textStyle="bold"
            android:layout_marginLeft="250dp"
            android:textSize="25dp"></TextView>
        <TextView
            android:id="@+id/linea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/ss"
            android:textStyle="bold"
            android:text="_________"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="250dp"
            android:textSize="25dp"></TextView>
        <TextView
            android:id="@+id/lineat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/ss"
            android:textStyle="bold"
            android:text="Total:"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            android:textSize="25dp"></TextView>
        <TextView
            android:id="@+id/IMPORTET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/lineat"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:hint="Importe:"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="150dp"
            android:textSize="25dp"></TextView>
        <EditText
            android:id="@+id/IMPORTE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/linea"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:hint="Importe"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="250dp"
            android:textSize="25dp"></EditText>
        <TextView
            android:id="@+id/canbio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/IMPORTE"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:hint="cambio"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="250dp"
            android:textSize="25dp"></TextView>
        <TextView
            android:id="@+id/canbiot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/IMPORTE"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:text="Cambio:"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            android:textSize="25dp"></TextView>
        <Button
            android:id="@+id/compar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="620dp"
            android:background="@drawable/compras"
            android:onClick="openMenu" />
        <Button
            android:id="@+id/cancelar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="620dp"
            android:background="@drawable/cancelado"
            android:onClick="openMenu" />
        <Button
            android:id="@+id/agregar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="620dp"
            android:background="@drawable/qr"
            android:onClick="openMenu" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/navigation_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/blaco"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boss"
            >

        </ImageView>
        <Button
            android:id="@+id/usuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="19dp"
            android:textSize="19dp"
            android:layout_marginTop="12dp"
            android:text="Agregar usuarios"/>
        <Button
            android:id="@+id/producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="19dp"
            android:textSize="19dp"
            android:layout_marginTop="12dp"
            android:text="Registrar producto"/>
        <Button
            android:id="@+id/venta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="19dp"
            android:textSize="19dp"
            android:layout_marginTop="12dp"
            android:text="Venta"/>
        <Button
            android:id="@+id/inventario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="19dp"
            android:textSize="19dp"
            android:layout_marginTop="12dp"
            android:text="inventario"/>
        <Button
            android:id="@+id/salir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="19dp"
            android:textSize="19dp"
            android:layout_marginTop="210dp"
            android:text="cerrar sesion"/>

        <!-- Aquí irían los elementos del menú lateral -->

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>