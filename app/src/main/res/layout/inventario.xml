<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/mDrawerLayout"
android:background="@color/black"
android:layout_height="match_parent"
android:layout_width="match_parent"
android:fitsSystemWindows="true">


<!-- Contenido principal de la actividad -->

<!-- Menú lateral -->
<RelativeLayout
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  menu"
        android:textStyle="bold"
        android:padding="17px"
        android:textSize="28sp"
        android:fontFamily="@font/logo1"
        android:textColor="@color/black"
        android:background="@drawable/redondeado"
        android:drawableStart="@drawable/lista"
        android:onClick="openMenu" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listausuariosl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_menu"
        android:layout_marginTop="-5dp" />
</RelativeLayout>
<LinearLayout
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/blaco"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boss"
        >

    </ImageView>
    <Button
        android:id="@+id/usuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="19dp"
        android:textSize="19dp"
        android:layout_marginTop="12dp"
        android:text="Agregar usuarios"/>
    <Button
        android:id="@+id/producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="19dp"
        android:textSize="19dp"
        android:layout_marginTop="12dp"
        android:text="Registrar producto"/>
    <Button
        android:id="@+id/venta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="19dp"
        android:textSize="19dp"
        android:layout_marginTop="12dp"
        android:text="Venta"/>
    <Button
        android:id="@+id/inventario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="19dp"
        android:textSize="19dp"
        android:layout_marginTop="12dp"
        android:text="inventario"/>
    <Button
        android:id="@+id/salir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="19dp"
        android:textSize="19dp"
        android:layout_marginTop="210dp"
        android:text="cerrar sesion"/>

    <!-- Aquí irían los elementos del menú lateral -->

</LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>