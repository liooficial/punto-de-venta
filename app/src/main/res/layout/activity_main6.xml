<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/id1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="26sp"
    android:textColor="@color/white"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20px"
    android:text="id.producto"/>
<TextView
    android:id="@+id/id2"
    android:layout_below="@+id/id1"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="20px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:hint=""
    android:textSize="26sp" />
<Button
    android:id="@+id/btscaner"
    android:layout_alignBottom="@+id/id2"
    android:layout_toRightOf="@+id/id1"
    android:layout_width="120dp"
    android:layout_marginLeft="150dp"
    android:layout_height="120dp"
    android:background="@drawable/qr"/>
<TextView
    android:id="@+id/n1"
    android:layout_below="@+id/id2"
    android:layout_width="wrap_content"
    android:textColor="@color/white"
    android:layout_height="wrap_content"
    android:layout_marginTop="80px"
    android:layout_marginLeft="20px"
    android:textSize="26sp"
    android:text="Nombre del producto"/>
<TextView
    android:id="@+id/n2"
    android:layout_below="@+id/n1"
    android:layout_marginTop="80px"
    android:layout_marginLeft="20px"
    android:layout_width="wrap_content"
    android:textColor="@color/white"
    android:layout_height="wrap_content"
    android:textSize="26sp"
    android:hint="Nombre del producto"/>
<TextView
    android:id="@+id/Forma1"
    android:layout_below="@+id/n2"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="20px"
    android:layout_width="wrap_content"
    android:textColor="@color/white"
    android:layout_height="wrap_content"
    android:textSize="26sp"
    android:text="Forma del artículo"/>
<TextView
    android:id="@+id/Forma2"
    android:layout_toRightOf="@+id/Forma1"
    android:layout_alignBaseline="@+id/Forma1"
    android:layout_marginLeft="20px"
    android:textColor="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="26sp"
    android:hint="Forma del artículo"/>
<TextView
    android:id="@+id/v1"
    android:layout_marginTop="180px"
    android:layout_below="@+id/Forma1"
    android:textColor="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20px"
    android:textSize="26sp"
    android:text="Volumen del artículo"/>
<TextView
    android:id="@+id/v2"
    android:layout_toRightOf="@+id/v1"
    android:layout_alignBaseline="@+id/v1"
    android:layout_marginLeft="20px"
    android:layout_width="wrap_content"
    android:textColor="@color/white"
    android:layout_height="wrap_content"
    android:textSize="26sp"
    android:hint="Volumen del artículo"/>

<TextView
    android:id="@+id/precio_v1"
    android:layout_marginTop="80px"
    android:layout_below="@+id/v1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20px"
    android:textColor="@color/white"
    android:textSize="26sp"
    android:text="Precio"/>
<TextView
    android:id="@+id/precio_v2"
    android:layout_toRightOf="@+id/precio_v1"
    android:layout_alignBaseline="@+id/precio_v1"
    android:layout_marginLeft="20px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:textSize="26sp"
    android:hint="Precio"/>
<TextView
    android:id="@+id/catidadp"
    android:layout_marginTop="80px"
    android:layout_below="@+id/precio_v1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20px"
    android:textColor="@color/white"
    android:textSize="26sp"
    android:text="Catidad"/>
<TextView
    android:id="@+id/catidadp2"
    android:layout_toRightOf="@+id/catidadp"
    android:layout_alignBaseline="@+id/catidadp"
    android:layout_marginLeft="20px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:textSize="26sp"
    android:hint="Catidad del producto"/>

    <Button
        android:id="@+id/listo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/catidadp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/compras" />

    <Button
        android:id="@+id/cancelar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/catidadp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/listo"
        android:background="@drawable/cancelado" />

</RelativeLayout>